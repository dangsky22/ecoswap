<div class="max-w-4xl mx-auto py-10 px-4">
  <h1 class="text-3xl font-bold mb-6 flex items-center">
    <i class="fas fa-search text-blue-600 mr-3"></i> Daftar Pengelola Limbah
  </h1>
  <% if (pengelola.length === 0) { %>
    <div class="bg-yellow-50 border border-yellow-200 text-yellow-800 rounded-lg p-4 mb-6">
      Belum ada pengelola yang terdaftar.
    </div>
  <% } else { %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% pengelola.forEach(p => { %>
        <div class="bg-white rounded-xl shadow p-6 flex flex-col gap-2 border border-gray-100">
          <div class="flex items-center gap-3 mb-2">
            <i class="fas fa-user-tie text-2xl text-blue-500"></i>
            <span class="font-bold text-lg"><%= p.name %></span>
          </div>
          <div class="text-gray-600 text-sm"><i class="fas fa-envelope mr-1"></i> <%= p.email %></div>
          <% if (p.profile && p.profile.phone) { %>
            <div class="text-gray-600 text-sm"><i class="fas fa-phone mr-1"></i> <%= p.profile.phone %></div>
          <% } %>
          <% if (p.profile && p.profile.address) { %>
            <div class="text-gray-600 text-sm"><i class="fas fa-map-marker-alt mr-1"></i> <%= p.profile.address %></div>
          <% } %>
          <% if (p.profile && p.profile.wasteTypes && p.profile.wasteTypes.length) { %>
            <div class="text-gray-600 text-sm"><i class="fas fa-recycle mr-1"></i> Jenis Sampah: <%= p.profile.wasteTypes.join(', ') %></div>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
